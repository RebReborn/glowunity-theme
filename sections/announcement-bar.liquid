{%- if section.settings.show_announcement -%}
<div class="announcement-bar" style="background-color: {{ section.settings.bg_color }}; color: {{ section.settings.text_color }};">
  <div class="container">
    <p class="announcement-text">
      {{ section.settings.text | escape }}
      {% if section.settings.link != blank %}
        <a href="{{ section.settings.link }}" style="color: {{ section.settings.text_color }};">
          {{ section.settings.link_text | escape }}
        </a>
      {% endif %}
    </p>
  </div>
</div>
{%- endif -%}

{% schema %}
{
  "name": "Announcement bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show announcement",
      "default": true
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Free shipping on all orders over $50"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link text",
      "default": "Shop now"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#FFFFFF"
    }
  ]
}
{% endschema %}

<style>
.announcement-bar {
  padding: 10px 0;
  text-align: center;
  font-size: 0.9rem;
  position: relative;
  z-index: 10;
}

.announcement-text {
  margin: 0;
}

.announcement-text a {
  text-decoration: underline;
  margin-left: 5px;
}
</style>